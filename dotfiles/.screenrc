shell -$SHELL

startup_message off

# detach on hangup
autodetach on

defscrollback 50000
#make scrollbar work
termcapinfo xterm* ti@:te@

# Run everything in UTF-8.
defutf8 on
# If a window goes unresponsive, don't block the whole session waiting for it.
nonblock on

hardstatus off
caption splitonly
